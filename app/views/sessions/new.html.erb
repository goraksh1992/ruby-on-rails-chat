<h3 class="ui center aligned medium icon header">
    Welcome to MessageMe - <i>A complete Chat App</i>
</h3>
<h2 class="ui center aligned medium icon header">
  <i class="circular orange power icon"></i>
  Log in to continue 
</h2>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
         <%= form_with(scope: :session, url: login_path, local: true ) do |f| %>
          <div class="field">
            <%= f.label 'Username'%>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label 'Password'%>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit 'Login', class:'ui orange submit button' %>
         <% end %>
      </div>
    </div>
    <div class="middle aligned column">
      <div class="ui red disabled big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>